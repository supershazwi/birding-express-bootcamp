<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Add Note</title>

    <!-- CSS only -->
    <link
      href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css"
      rel="stylesheet"
      integrity="sha384-1BmE4kWBq78iYhFldvKuhfTAU6auU8tT94WrHftjDbrCEXSU1oBoqyl2QvZ6jIW3"
      crossorigin="anonymous"
    />
  </head>
  <body>
    <%- include('navbar'); -%>

    <div class="container mt-2">
      <div class="row">
        <div class="col-sm-12">
          <div class="card">
            <div class="card-header py-3">
              <h4 class="my-0 fw-normal">Add Note</h4>
            </div>
            <div class="card-body">
              <form
                action="/note"
                class="needs-validation"
                novalidate=""
                method="POST"
              >
                <div class="row g-3 mb-3">
                  <div class="col-12">
                    <label for="behavior" class="form-label">Behavior</label>
                    <input
                      type="text"
                      class="form-control"
                      id="behavior"
                      name="behavior"
                      placeholder=""
                      value=""
                      required=""
                    />
                  </div>
                </div>
                <div class="row g-3 mb-3">
                  <div class="col-12">
                    <label for="flockSize" class="form-label">Flock Size</label>
                    <textarea
                      class="form-control"
                      id="flockSize"
                      name="flockSize"
                      placeholder=""
                      value=""
                      required=""
                    ></textarea>
                  </div>
                </div>
                <div class="row g-3 mb-3">
                  <div class="col-12">
                    <label for="speciesIds" class="form-label">Species</label>
                    <% species.forEach((species) => { %>  
                      <br/>
                      <input type="checkbox" name="speciesIds" value="<%= species.id %>" />
                      <label><%= species.name %></label>
                    <% }) %>
                  </div>
                </div>
                
                <div class="row g-3 mb-3">
                  <div class="col-12">
                    <label for="dateTime" class="form-label"
                      >Date & Time</label
                    >
                    <input
                      type="datetime-local"
                      class="form-control"
                      id="dateTime"
                      name="dateTime"
                      placeholder=""
                      value=""
                      required=""
                    />
                  </div>
                </div>
                <button type="submit" class="btn btn-primary">
                  Add Note
                </button>
              </form>
            </div>
          </div>
        </div>
      </div>
    </div>

    <!-- JavaScript Bundle with Popper -->
    <script
      src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.bundle.min.js"
      integrity="sha384-ka7Sk0Gln4gmtz2MlQnikT1wXgYsOg+OMhuP+IlRH9sENBO0LRn5q+8nbTov4+1p"
      crossorigin="anonymous"
    ></script>
  </body>
</html>
